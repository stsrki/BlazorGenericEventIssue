@page "/testpage"

<h1>Generic Event Test Page</h1>



<div class="row">
    <div class="col-6">
        <p>Selected value: @currentValue</p>

        @*  this one is working because I have defined TValue to bo an int *@
        <SelectEdit TValue="int" Value="@currentValue" SelectedValue="@((v)=>currentValue = v)">
            @for ( int i = 1; i <= 5; ++i )
            {
                <option @key="i" value="@i" selected="@(i==currentValue)">@i</option>
            }
        </SelectEdit>
    </div>
    <div class="col-6">
        <p>Selected value: @currentValue2</p>

        @*  this one is not working because TValue is not defined *@
        <SelectEdit Value="@currentValue2" SelectedValue="@((v)=>currentValue2 = v)">
            @for ( int i = 1; i <= 5; ++i )
            {
                <option @key="i" value="@i" selected="@(i==currentValue2)">@i</option>
            }
        </SelectEdit>
    </div>
</div>
@code {
    int currentValue = 1;
    int currentValue2 = 2;
}
